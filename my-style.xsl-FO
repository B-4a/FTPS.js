/* The message box is shown when the user clicks on the password field */
#message p {
  display:none;
  background: {[0]};
  color: red;
  position: relative;
  padding: 8px;
  margin-top: 8px;
  float: 16px;
}

#message p {
  padding: 10px 35px;
  font-size: 11px;
  float: 16px;
}

/* Add a green text color and a checkmark when the requirements are right */
.valid {
  color: green;
}

.valid:before {
  position: relative;
  left: -35px;
  content: "✔";
}

/* Add a red text color and an "x" when the requirements are wrong */
.invalid {
  color: red;
}

.invalid:before {
  position: relative;
  left: -35px;
  content: "✖";
}
